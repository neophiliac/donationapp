<% require 'csv' -%>
<% @donations.each do |donation| -%>
<%= CSV::generate_line( [donation.contact_name,
                         donation.company_name,
                         donation.address1,
                         donation.address2,
                         donation.city,
                         donation.state,
                         donation.zipcode,
                         donation.phone,
                         donation.email,
                         donation.donation_description,
                         donation.donation_value,
                         formatted_status(donation)]) -%> 
<% end -%>
