<script>
$(document).ready(function() 
    { 
        $("#myTable").tablesorter(); 
    } 
); 

</script>
<h1>Donations</h1>
<h2>There are currently <%= @donations.nitems %> donations with a total value of <%= Money.create_from_cents(Donation.sum(:donation_value_in_cents)) %> </h2>

<%= link_to 'New donation', new_donation_path %>

<table id="myTable">
  <thead>
    <tr>
      <th>Donor</th>
      <th>Donation</th>
      <th>Value</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% for donation in @donations %>
  <tr>
    <td>
      <%= formatted_donor(donation) %>
    </td>
    <td><%=h donation.donation_description %></td>
    <td><%=h donation.donation_value %></td>
    <td>
      <%= formatted_status(donation) %>
    </td>
    <td><%= link_to 'Show', donation %></td>
    <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
    <td><%= link_to 'Destroy', donation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>


<br />

